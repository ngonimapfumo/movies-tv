<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieDB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- <item name="android:windowBackground">@color/white</item>-->
        <item name="fontFamily">@font/albertsansregular</item>
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryVariant">#0d253f</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#303F9F</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000</item>
        <!-- Customize your theme here. -->

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/anim</item>
        <item name="android:windowExitTransition">@transition/anim</item>
    </style>

    <style name="Theme.MovieDB.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieDB.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovieDB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="grey_white">#C9C9CC</color>
</resources>